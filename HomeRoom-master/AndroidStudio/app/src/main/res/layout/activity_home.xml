<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context=".Home">

    <!--Schedule Button-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.628"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957"
        app:srcCompat="@drawable/schedule" />

    <!--Profile Button-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.369"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957"
        app:srcCompat="@drawable/profile" />

    <!--Settings Button-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957"
        app:srcCompat="@drawable/settings" />

    <!--Messaging Button-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957"
        app:srcCompat="@drawable/message" />

    <!--Date-->
    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today is Wednesday, August 26, 2020"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/Link"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.21" />

    <ImageView
        android:id="@+id/welcome"
        android:layout_width="378dp"
        android:layout_height="132dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026"
        app:srcCompat="@drawable/welcome" />

    <!--Upcoming Events Title-->
    <TextView
        android:id="@+id/upcomingEvents"
        android:layout_width="365dp"
        android:layout_height="45dp"
        android:background="@color/Text"
        android:gravity="center"
        android:text="Upcoming Events"
        android:textColor="@color/Button"
        android:textSize="8pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316"
        tools:ignore="HardcodedText" />

    <!--Virtual Crafting-->
    <TextView
        android:id="@+id/event"
        android:layout_width="364dp"
        android:layout_height="33dp"
        android:layout_margin="1dp"
        android:background="@color/Table_Back"
        android:gravity="center_vertical"
        android:text="   Virtual Crafting"
        android:textColor="@color/Text"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422" />

<!--Teacher Check Point-->
    <TextView
        android:id="@+id/event2"
        android:layout_width="364dp"
        android:layout_height="33dp"
        android:background="@color/Table_Back"
        android:gravity="center_vertical"
        android:text="   Teacher Check Point Meeting"
        android:textColor="@color/Text"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468" />

    <!--Labor Day-->
    <TextView
        android:id="@+id/event1"
        android:layout_width="364dp"
        android:layout_height="33dp"
        android:background="@color/Table_Back"
        android:gravity="center_vertical"
        android:text="   Labor Day"
        android:textColor="@color/Text"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.375" />

    <!--Gatsby-->
    <TextView
        android:id="@+id/event3"
        android:layout_width="364dp"
        android:layout_height="33dp"
        android:background="@color/Table_Back"
        android:gravity="center_vertical"
        android:text="   Chapter 1 of Great Gatsby"
        android:textColor="@color/Text"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64" />

    <!--Essay-->
    <TextView
        android:id="@+id/event4"
        android:layout_width="364dp"
        android:layout_height="33dp"
        android:background="@color/Table_Back"
        android:gravity="center_vertical"
        android:text="   Essay on Quarentine"
        android:textColor="@color/Text"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.686" />

    <!--Virtual Discussion-->
    <TextView
        android:id="@+id/event5"
        android:layout_width="364dp"
        android:layout_height="33dp"
        android:background="@color/Table_Back"
        android:gravity="center_vertical"
        android:text="   Virtual in Class Discussion"
        android:textColor="@color/Text"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.733" />

    <!--Upcoming Assignment-->
    <TextView
        android:id="@+id/upcomingEvents2"
        android:layout_width="365dp"
        android:layout_height="45dp"
        android:background="@color/Text"
        android:gravity="center"
        android:text="Upcoming Assignments"
        android:textColor="@color/Button"
        android:textSize="8pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.586" />


</androidx.constraintlayout.widget.ConstraintLayout>